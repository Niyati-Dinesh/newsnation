              <Spinner />
            </div>
          ) : (
            <div className="grid grid-cols-1 sm:grid-cols-2 gap-6 px-4 py-6">
              {this.state.articles.map((element, index) => (
                <NewsItem
                  key={index}
                  title={element.title}
                  description={element.description || "No description available."}
